.row
  .large-3.columns
    = form_tag search_index_path, :remote => true do |f|
      = label_tag :origin
      = text_field_tag :origin, nil, :autofocus => true
      = label_tag :destination
      = text_field_tag :destination
      = link_to 'Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius alert'
      = submit_tag nil, :class => 'button tiny radius success'
  .large-9.columns

