.row
  .large-3.columns
    = form_tag search_index_path, :action => 'create', :remote => true do |f|
      = label_tag :origin
      = select_tag :origin, options_for_select(@flights.map{ |i| [i.origin, i.origin] })
      = label_tag :destination
      = select_tag :destination, options_for_select(@flights.map{ |i| [i.destination, i.destination] })
      = submit_tag nil, :class => 'button tiny radius success'
      = link_to 'Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius alert'
  .large-9.columns

