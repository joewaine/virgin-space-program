.row
  .large-3.columns
    =render(:partial => 'shared/errors', :locals => {:object => @user})
    = form_for @user, :url => users_path, :remote => true do |f|
      = f.text_field :email, :placeholder => "email"
      = f.password_field :password, :placeholder => "password"
      = f.password_field :password_confirmation, :placeholder => "confirm password"
      = f.submit nil, :class => 'button tiny radius success'
      = link_to('Cancel', '#', :'data-clear-form' => true, id: 'cancel', :class => 'button tiny radius alert')
  .large-9.columns




 